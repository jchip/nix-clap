{
  "name": "nix-clap",
  "version": "2.0.0",
  "description": "Simple, lightweight, flexible, and comprehensive Command Line Argument Parsing for node.js",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "lint": "xrun xarc/lint",
    "coveralls": "vitest run --coverage && cat coverage/lcov.info | coveralls",
    "coverage": "vitest run --coverage",
    "check": "xrun -n -x xarc/check coveralls",
    "prepublishOnly": "xrun --serial [[build, docs], xarc/check]",
    "docs": "xrun xarc/docs",
    "prepack": "publish-util-prepack",
    "postpack": "publish-util-postpack"
  },
  "publishUtil": {
    "remove": [
      "/scripts.*/"
    ]
  },
  "publishConfig": {
    "tag": "next"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jchip/nix-clap.git"
  },
  "files": [
    "dist",
    "lib"
  ],
  "keywords": [
    "unix",
    "un*x",
    "clap",
    "lightweight",
    "command",
    "line",
    "argument",
    "arguments",
    "parsing",
    "cli",
    "yargs",
    "argparse",
    "commander",
    "optimist"
  ],
  "author": "Joel Chen <joel123@gmail.com>",
  "license": "Apache-2.0",
  "dependencies": {
    "strip-ansi": ">= 4.0.0",
    "tslib": "^2.6.2"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/node": "^20.8.9",
    "@vitest/coverage-v8": "^3.2.2",
    "@xarc/module-dev": "^5.0.0",
    "prettier": "^3.0.3",
    "publish-util": "^2.1.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.1",
    "tsx": "^4.19.4",
    "typedoc": "^0.25.2",
    "typescript": "^5.2.2",
    "vitest": "^3.2.2"
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "arrowParens": "avoid",
    "trailingComma": "none"
  },
  "@xarc/module-dev": {
    "features": [
      "prettier",
      "typedoc",
      "typescript"
    ]
  }
}
