{
  "name": "nix-clap",
  "version": "2.2.1",
  "description": "Simple, lightweight, flexible, and comprehensive Command Line Argument Parsing for node.js",
  "engines": {
    "node": ">=20"
  },
  "type": "module",
  "types": "dist-cjs/index.d.ts",
  "main": "dist-cjs/index.cjs",
  "module": "dist-esm/index.js",
  "exports": {
    ".": {
      "import": "./dist-esm/index.js",
      "require": "./dist-cjs/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "rm -rf dist-* && tsc --build tsconfig.esm.json && tsc --build tsconfig.cjs.json && ts2mjs --cjs --skip-ts --remove-source dist-cjs",
    "test": "vitest run",
    "test-debug": "vitest run --inspect-brk --no-file-parallelism",
    "coveralls": "vitest run --coverage && cat coverage/lcov.info | coveralls",
    "coverage": "vitest run --coverage",
    "prepublishOnly": "xrun --serial [[build, docs], xarc/check]",
    "docs": "xrun xarc/docs",
    "prepack": "publish-util-prepack",
    "postpack": "publish-util-postpack"
  },
  "publishUtil": {
    "remove": [
      "/scripts.*/"
    ],
    "keep": [
      "exports"
    ]
  },
  "publishConfig": {
    "tag": "next"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jchip/nix-clap.git"
  },
  "files": [
    "dist-cjs",
    "dist-esm"
  ],
  "keywords": [
    "unix",
    "un*x",
    "clap",
    "lightweight",
    "command",
    "line",
    "argument",
    "arguments",
    "parsing",
    "cli",
    "yargs",
    "argparse",
    "commander",
    "optimist"
  ],
  "author": "Joel Chen <joel123@gmail.com>",
  "license": "Apache-2.0",
  "dependencies": {
    "strip-ansi": ">= 4.0.0",
    "tslib": "^2.6.2"
  },
  "devDependencies": {
    "@types/node": "^22.15.30",
    "@vitest/coverage-v8": "^3.2.2",
    "@xarc/module-dev": "^5.0.0",
    "prettier": "^3.5.3",
    "publish-util": "^2.1.0",
    "source-map-support": "^0.5.21",
    "ts2mjs": "github:jchip/ts2mjs",
    "tsx": "^4.19.4",
    "typedoc": "^0.28.5",
    "typescript": "^5.8.3",
    "vitest": "^3.2.2"
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "arrowParens": "avoid",
    "trailingComma": "none"
  },
  "@xarc/module-dev": {
    "features": [
      "prettier",
      "typedoc",
      "typescript"
    ]
  }
}
