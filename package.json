{
  "name": "nix-clap",
  "version": "2.0.0",
  "description": "Simple, lightweight, flexible, and comprehensive Command Line Argument Parsing for node.js",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "test": "xrun xarc/test-only",
    "lint": "xrun xarc/lint",
    "coveralls": "cat coverage/lcov.info | coveralls",
    "coverage": "xrun xarc/test-cov",
    "check": "xrun -n -x xarc/check coveralls",
    "prepublishOnly": "xrun --serial [[build, docs], xarc/check]",
    "docs": "xrun xarc/docs",
    "prepack": "publish-util-prepack",
    "postpack": "publish-util-postpack"
  },
  "publishUtil": {
    "remove": [
      "/scripts.*/"
    ]
  },
  "publishConfig": {
    "tag": "next"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jchip/nix-clap.git"
  },
  "files": [
    "dist",
    "lib"
  ],
  "keywords": [
    "unix",
    "un*x",
    "clap",
    "lightweight",
    "command",
    "line",
    "argument",
    "arguments",
    "parsing",
    "cli",
    "yargs",
    "argparse",
    "commander",
    "optimist"
  ],
  "author": "Joel Chen <joel123@gmail.com>",
  "license": "Apache-2.0",
  "dependencies": {
    "strip-ansi": ">= 4.0.0",
    "tslib": "^2.6.2"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/chai": "^4.3.9",
    "@types/mocha": "^10.0.3",
    "@types/node": "^20.8.9",
    "@types/sinon": "^10.0.20",
    "@types/sinon-chai": "^3.2.11",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "@xarc/module-dev": "^5.0.0",
    "babel-eslint": "^10.1.0",
    "chai": "^4.3.10",
    "coveralls": "^3.1.1",
    "eslint": "^8.52.0",
    "eslint-config-walmart": "^2.2.1",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-jsdoc": "^46.8.2",
    "eslint-plugin-tsdoc": "^0.2.17",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "prettier": "^3.0.3",
    "publish-util": "^2.1.0",
    "sinon": "^17.0.0",
    "sinon-chai": "^3.7.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.1",
    "tsx": "^4.19.4",
    "typedoc": "^0.25.2",
    "typescript": "^5.2.2"
  },
  "nyc": {
    "extends": [
      "@istanbuljs/nyc-config-typescript"
    ],
    "all": true,
    "reporter": [
      "lcov",
      "text",
      "text-summary"
    ],
    "exclude": [
      "*clap.js",
      "*clap.ts",
      ".eslintrc.js",
      "coverage",
      "dist",
      "docs",
      "gulpfile.js",
      "test",
      "xrun*.js",
      "xrun*.ts",
      "examples",
      "src/index.ts"
    ],
    "check-coverage": true,
    "statements": 100,
    "branches": 100,
    "functions": 100,
    "lines": 100,
    "cache": false
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "arrowParens": "avoid",
    "trailingComma": "none"
  },
  "@xarc/module-dev": {
    "features": [
      "eslint",
      "eslintTS",
      "mocha",
      "prettier",
      "typedoc",
      "typescript"
    ]
  },
  "mocha": {
    "require": [
      "ts-node/register",
      "source-map-support/register",
      "@xarc/module-dev/config/test/setup.js"
    ],
    "recursive": true
  }
}