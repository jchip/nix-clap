{
  "compilerOptions": {
    "outDir": "dist",
    "lib": [
      "ES2018"
    ],
    "module": "ES2015",
    "esModuleInterop": true,
    "importHelpers": false,
    "target": "ES2018",
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "types": [
      "node"
    ],
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "alwaysStrict": true,
    "strictFunctionTypes": true,
    "moduleResolution": "Node",
    "rewriteRelativeImportExtensions": true
  },
  "include": [
    "src"
  ]
}
